{
	"compilerOptions": {
		"strict": true,
		"noUncheckedIndexedAccess": true,
		"useUnknownInCatchVariables": true,
		"module": "nodenext",
		"isolatedModules": true,
		"exactOptionalPropertyTypes": true,
		"lib": ["es2023"],
		"rootDir": "src",
		"outDir": "dist",
		"sourceMap": true,
		"types": [],
		"skipLibCheck": true,
	},
	"include": ["src/**/*.ts"],
	"exclude": ["src/**/*.test.ts", "eslint-typegen.d.ts"],
	"ts-dualist": {
		"exports": {
			".": "index.ts",
			"./core": "core.ts",
			"./array": "array.ts",
			"./collection": "collection.ts",
			"./lazy": "lazy.ts",
			"./literal": "literal.ts",
			"./object": "object.ts",
			"./refine": "refine.ts",
			"./tuple": "tuple.ts",
			"./union": "union.ts"
		}
	}
}
